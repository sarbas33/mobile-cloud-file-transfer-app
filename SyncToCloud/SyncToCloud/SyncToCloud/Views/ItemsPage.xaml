<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SyncToCloud.Views.ItemsPage"
             Title="Set Destination"
             xmlns:local="clr-namespace:SyncToCloud.ViewModels"  
             xmlns:model="clr-namespace:SyncToCloud.Models"  
             x:Name="BrowseItemsPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Clicked="DestinationGoogleDrive"  Grid.Row="0" Text="Sync With Google Drive" FontSize="Medium"></Button>
        <Button Grid.Row="1" Text="Sync With Laptop" FontSize="Medium" ></Button>
        <Button Grid.Row="2" Text="Sync With Other Storages" FontSize="Medium"></Button>
    </Grid>
</ContentPage>
